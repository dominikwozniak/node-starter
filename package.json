{
  "name": "node-setup",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write .",
    "format-lint": "eslint --fix --ext .js,.jsx .",
    "format-all": "npm run format && npm run format-lint",
    "check-format": "prettier --check .",
    "check-lint": "eslint --ext js --ext jsx",
    "check-all": "npm run check-format && npm run check-lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5",
    "husky": "^7.0.0"
  },
  "dependencies": {
    "dotenv-safe": "^8.2.0"
  }
}
